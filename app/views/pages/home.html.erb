<!-- render map from map.js -->
<div class="mapbox" id="map">
</div>

<div class="container-fluid">
	<!--     categories dropdown menu -->
  <div class="row">
    <div class="col-xs-12">
      <div class="btn-group categories">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span id="sort-by-text">Categories</span>&nbsp <span class="caret"></span>
        </button>
        <ul class="dropdown-menu pull-right">
          <li><a href="#">Restaurant</a></li>
          <li><a href="#">Bar</a></li>
          <li><a href="#">Hardware Store</a></li>
          <li><a href="#">Healthcare</a></li>
        </ul>
      </div>  
    </div>
  </div>
  <div class="row">
    <div class="col-md-4" id="business">
      <% @businesses.each do |i| %>
      <div class="panel panel-default" id="businesses">
        <div class="panel-heading">
          <h3 class="panel-title" id="tit"><%= i.name %></h3>
        </div>
        <div class="panel-body">
          <%= i.description %>
        </div>
      </div><br>
      <% end %>
    </div>
  </div>
</div>
